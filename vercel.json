{
  "version": 2,
  "builds": [
    {
      "src": "api/combine.php",
      "use": "@vercel/php",
      "config": {
        "maxDuration": 30,
        "memory": 1024
      }
    },
    {
      "src": "api/download.php", 
      "use": "@vercel/php",
      "config": {
        "maxDuration": 10,
        "memory": 512
      }
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/combine",
      "dest": "/api/combine.php"
    },
    {
      "src": "/api/download",
      "dest": "/api/download.php"
    },
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "UPLOAD_MAX_SIZE": "10485760"
  }
}

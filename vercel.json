{
  "version": 2,
  "builds": [
    {
      "src": "api/combine.php",
      "use": "@vercel/php"
    },
    {
      "src": "api/download.php", 
      "use": "@vercel/php"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/combine",
      "dest": "/api/combine.php"
    },
    {
      "src": "/api/download",
      "dest": "/api/download.php"
    },
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "functions": {
    "api/combine.php": {
      "maxDuration": 30,
      "memory": 1024
    },
    "api/download.php": {
      "maxDuration": 10,
      "memory": 512
    }
  },
  "env": {
    "UPLOAD_MAX_SIZE": "10485760"
  }
}
